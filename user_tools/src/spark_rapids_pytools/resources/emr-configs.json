          "size": 299350810
        },
        {
          "name":  "Hadoop AWS",
          "uri": "https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-aws/3.3.4/hadoop-aws-3.3.4.jar",
          "type": "jar",
          "md5": "59907e790ce713441955015d79f670bc",
          "sha1": "a65839fbf1869f81a1632e09f415e586922e4f80",
